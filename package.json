{
  "name": "@ipikuka/react-markdown",
  "version": "2.0.0",
  "description": "It is an opinionated wrapper of the 'react-markdown' package",
  "type": "module",
  "exports": "./dist/esm/index.js",
  "main": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "prettier": "prettier --write .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config ./jest.config.cjs",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run prettier && npm run lint",
    "prebuild": "rimraf dist"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "global.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipikuka/react-markdown.git"
  },
  "keywords": [
    "markdown",
    "react-markdown",
    "remark"
  ],
  "author": "ipikuka <talatkuyuk@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/ipikuka/react-markdown#readme",
  "bugs": {
    "url": "https://github.com/ipikuka/react-markdown/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "hastscript": "^9.0.0",
    "react-markdown": "^9.0.3",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-pre-language": "^1.1.0",
    "rehype-prism-plus": "^2.0.0",
    "rehype-raw": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "remark-definition-list": "^2.0.0",
    "remark-emoji": "^5.0.1",
    "remark-fix-guillemets": "^1.1.3",
    "remark-flexible-code-titles": "^1.2.0",
    "remark-flexible-containers": "^1.2.1",
    "remark-flexible-markers": "^1.2.1",
    "remark-flexible-paragraphs": "^1.2.0",
    "remark-gemoji": "^8.0.0",
    "remark-gfm": "^4.0.0",
    "remark-ins": "^1.1.0",
    "remark-smartypants": "^3.0.2",
    "remark-supersub": "^1.0.0",
    "remark-textr": "^6.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.16",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prettier-2": "npm:prettier@^2.8.8",
    "react-dom": "^18.3.1",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "@types/react": ">=18",
    "react": ">=18"
  }
